---
import ThemeToggle from "./ThemeToggle.astro";

const links: { name: string; href: string }[] = [
  { name: "reading notes", href: "https://readings.tiff.ws/" },
  {
    name: "projects",
    href: "https://git.tiff.engineer/tiff/projects/src/commit/bc75ea27b9f01f6784105cdb5c4f6492f02b497f/README.md",
  },
  { name: "about", href: "https://about.tiff.engineer" },
];
---

<header>
  <nav class="flex gap-5">
    <a href="/">home</a>
    {
      links.map((link) => (
        <a
          href={link.href}
          target="_blank"
          rel="noopener noreferrer"
          class="group flex items-center"
        >
          <span>{link.name}</span>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 16 16"
            fill="currentColor"
            class="size-4 transition-transform group-hover:-translate-y-0.5 group-hover:translate-x-0.5"
          >
            <path
              fill-rule="evenodd"
              d="M4.22 11.78a.75.75 0 0 1 0-1.06L9.44 5.5H5.75a.75.75 0 0 1 0-1.5h5.5a.75.75 0 0 1 .75.75v5.5a.75.75 0 0 1-1.5 0V6.56l-5.22 5.22a.75.75 0 0 1-1.06 0Z"
              clip-rule="evenodd"
            />
          </svg>
        </a>
      ))
    }

    <ThemeToggle />
  </nav>
</header>

<style>
  a {
    @apply text-gray-500 hover:text-gray-800 hover:text-slate-200 dark:text-slate-100;
  }
</style>
